<h1>カテゴリー覧</h1>
<% @channels.each do |channel| %>

<%if channel.id == 1%>
<%= link_to channel_contents_path(channel) do %>
<div class="box1 box">
  <i class="fa fa-users" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>

<%elsif channel.id == 2%>
<%= link_to channel_contents_path(channel) do %>
<div class="box2 box">
  <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>

<%elsif channel.id == 3%>
<%= link_to channel_contents_path(channel) do %>
<div class="box3 box">
  <i class="fa fa-building-o" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>

<%elsif channel.id == 4%>
<%= link_to channel_contents_path(channel) do %>
<div class="box4 box">
  <i class="fa fa-desktop" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>

<%elsif channel.id == 5%>
<%= link_to channel_contents_path(channel) do %>
<div class="box5 box">
  <i class="fa fa-archive" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>

<%elsif channel.id == 6%>
<%= link_to channel_contents_path(channel) do %>
<div class="box6 box">
  <i class="fa fa-smile-o" aria-hidden="true"></i>
  <%= channel.body %>
</div>
<% end %>
<% end %>
<% end %>
