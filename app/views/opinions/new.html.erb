<% if @opinion.errors.any? %>
  <div id="error_explanation">
    <h2><%= @opinion.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @opinion.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@opinion) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :body %>
<%= f.text_field :body %>
<br>
<%= f.submit "投稿"%>
<% end %>
