<!--検索機能-->
<p class="search_btn"><%= form_tag others_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder: "チャット一覧検索" %>
  <%= submit_tag "Search", :name => nil %></p>
<% end %><!-- end 検索機能-->

<%if params[:search].blank? %>
<h1>その他一覧<button class="vote"><%= link_to "投稿", new_other_path %></button></h1>
  
  <% @others.each do |other| %>
    <!-- # チャットのタイトルにlink_toでリンクを設定します。 -->
    <%= link_to other_path(other) do %>
    <%= other.title %>
    <% end %>
    <p><%= other.body %></p>
  <% end %>

<% else %>

  <h1>「<%= params[:search] %>」の検索結果</h1>
    <% @search.each do |search| %>
      <%= link_to other_path(search) do %>
        <%= search.title %>
      <% end %>
      <%= search.body %>
  <% end %>
  <br>
  <%= link_to '戻る', others_path %>
<% end %>